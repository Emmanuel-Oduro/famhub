<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nanayawzaza.farmiconn.FullProductInfoDisplaer">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFEBCD"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFEBCD"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="1"
            tools:context="com.example.nanayawzaza.farmiconn.PublishProduct">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:layout_weight="0.03"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/imageUpload"
                        android:layout_width="99dp"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload"
                            android:textAlignment="center"
                            android:textColor="#5d4037"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="152dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/edge"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/myimage"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="3dp"
                            android:paddingTop="5dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/fruitmain" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/TakeShot"
                        android:layout_width="92dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Capture"
                            android:textAlignment="center"
                            android:textColor="#5d4037"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/loce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="zaza"
                    android:textAlignment="center"
                    android:textColor="#5d4037"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:scrollbars="vertical">


                    <EditText
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/txtwrap"
                        android:ems="10"
                        android:hint="Product Name"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:textColorHint="#5d4037"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                    <Spinner
                        android:id="@+id/planets_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/txtwrap"
                        android:drawingCacheQuality="auto"
                        android:dropDownSelector="@drawable/edge"
                        android:entries="@array/role"
                        android:paddingBottom="5dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:popupBackground="#5d4037"
                        android:spinnerMode="dialog"
                        android:textColorHint="#5d4037"
                        android:textStyle="bold|italic" />

                    <EditText
                        android:id="@+id/productPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/txtwrap"
                        android:ems="10"
                        android:hint="@string/product_cost"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingBottom="5dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:textColorHint="#5d4037"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/productDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/txtwrap"
                        android:ems="10"
                        android:hint="@string/product_description"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingBottom="5dp"
                        android:paddingEnd="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:paddingStart="15dp"
                        android:paddingTop="5dp"
                        android:textColorHint="#5d4037"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#D2B48C"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ShowVideoDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.61"
                    android:background="#D2B48C"
                    android:fitsSystemWindows="true"
                    app:srcCompat="@drawable/ic_videocam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="#FFF"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#FFF" />

                <ImageButton
                    android:id="@+id/ShowAudioDialog"
                    android:layout_width="50dp"
                    android:layout_height="57dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.55"
                    android:background="#D2B48C"
                    app:srcCompat="@drawable/ic_record" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="#FFF"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#FFF" />


                <ImageButton
                    android:id="@+id/LocationPicker"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#D2B48C"
                    app:srcCompat="@drawable/location_on" />
            </LinearLayout>

            <Button
                android:id="@+id/addProduct"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/butwrap"
                android:gravity="center"
                android:text="Publish PRODUCT"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="30sp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
